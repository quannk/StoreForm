<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_2"

        android:background="@color/gray_848484">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_detail_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/iv_theme"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_marginLeft="@dimen/size_6"
                android:layout_marginTop="@dimen/size_6"
                android:src="@drawable/bidaochanh"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginRight="@dimen/size_10"
                android:fontFamily="@font/san_francisco_display_semibold"
                android:maxLines="2"
                android:paddingLeft="@dimen/size_2"
                android:paddingRight="@dimen/size_2"
                android:text="Hạt Giống Bí Đao Chanh F1 588AQ - Chịu Mưa"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_theme"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_2"
                android:layout_marginRight="@dimen/size_10"
                android:fontFamily="@font/san_francisco_display_regular"
                android:gravity="center"
                android:singleLine="true"
                android:text="03/02/2020"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_11"
                app:layout_constraintStart_toEndOf="@+id/iv_theme"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_2"
                android:layout_marginRight="@dimen/size_10"
                android:fontFamily="@font/san_francisco_display_regular"
                android:gravity="center"
                android:singleLine="true"
                android:text="30.000đ"
                android:textColor="@color/red_FF0000"
                android:textSize="@dimen/text_size_11"
                app:layout_constraintStart_toEndOf="@+id/iv_theme"
                app:layout_constraintTop_toBottomOf="@id/tv_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coupon"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/size_10"
            app:layout_constraintTop_toBottomOf="@id/layout_detail_cart">


        <EditText
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_50"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:fontFamily="@font/san_francisco_display_regular"
            android:gravity="center"
            android:singleLine="true"
            android:text="Nhập Mã Giảm Giá"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40"
            android:layout_marginRight="@dimen/size_20"
            android:background="@color/color_FF132593"
            android:text="Áp Dụng"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>