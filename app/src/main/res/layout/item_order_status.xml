<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_124"
        android:layout_margin="@dimen/size_2"
        android:background="@drawable/bg_item_follower">

        <ImageView
            android:id="@+id/iv_theme"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginLeft="@dimen/size_6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/bidaochanh"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_2"
            android:paddingRight="@dimen/size_2"
            android:layout_marginTop="@dimen/size_4"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:fontFamily="@font/san_francisco_display_semibold"
            android:text="Hạt Giống Bí Đao Chanh F1 588AQ - Chịu Mưa"
            android:maxLines="2"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@+id/iv_theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/text_size_15"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:fontFamily="@font/san_francisco_display_regular"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginTop="@dimen/size_2"
            android:text="03/02/2020"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@+id/iv_theme"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:fontFamily="@font/san_francisco_display_regular"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginTop="@dimen/size_2"
            android:text="30.000đ"
            android:textColor="@color/red_FF0000"
            android:textSize="@dimen/text_size_11"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/iv_theme"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:fontFamily="@font/san_francisco_display_regular"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginTop="@dimen/size_2"
            android:text="Giao hàng thành công"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_13"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            app:layout_constraintStart_toEndOf="@+id/iv_theme"
            />
        <ImageView
            android:layout_width="@dimen/size_28"
            android:layout_height="@dimen/size_28"
            android:src="@drawable/ic_tick"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/size_10"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>