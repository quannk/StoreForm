<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_permission_setting_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_44"
    android:clickable="true"
        android:paddingLeft="@dimen/size_10"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        android:scaleType="fitXY"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_17"
        android:padding="@dimen/size_12"
        android:layout_margin="@dimen/size_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_next" />

    <TextView
        android:id="@+id/tv_item_prolife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/san_francisco_display_light"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15"
        android:layout_marginLeft="@dimen/size_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/size_1"
        android:background="#F4F4F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_item_prolife" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>